<Window x:Class="YWCA_Software.ParticipantSelect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YWCA_Software"
        mc:Ignorable="d"
        Title="ParticipantSelect" Height="400" Width="800">
    <Grid>
        <TextBox x:Name="textBoxFirstName" Height="23" Margin="10,43,135,0" TextWrapping="Wrap" Text="{Binding FirstName}" VerticalAlignment="Top" GotFocus="textBoxFirstName_GotFocus"/>
        <TextBox x:Name="textBoxLastName" Height="23" Margin="10,71,135,0" TextWrapping="Wrap" Text="{Binding LastName}" VerticalAlignment="Top" GotFocus="textBoxLastName_GotFocus"/>
        <TextBox x:Name="textBoxParticipantID" Height="23" Margin="10,99,135,0" TextWrapping="Wrap" Text="Participant ID" VerticalAlignment="Top" GotFocus="textBoxParticipantID_GotFocus"/>
        <ListBox Margin="10,127,10,35" ItemsSource="{Binding ListPiDs}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button Name="ButtonSearch" BorderThickness="0" Background="Transparent" Margin="0,10,10,0" HorizontalAlignment="Right" Width="120" Height="102" VerticalAlignment="Top" Click="ButtonSearch_Click" KeyDown="ButtonSearch_KeyDown">
            <StackPanel>
                <Image Source="/Resources/Search.png" Width="100" Height="100"/>
            </StackPanel>
        </Button>
        <Button x:Name="buttonSelectParticipant" Content="Thats The One" HorizontalAlignment="Left" Margin="678,339,0,0" VerticalAlignment="Top" Width="104" Click="buttonSelectParticipant_Click"/>

    </Grid>
</Window>
